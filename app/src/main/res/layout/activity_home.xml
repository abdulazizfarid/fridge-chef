<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myView"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_home"
        android:weightSum="10"
        android:id="@+id/HomeLayout">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/txtCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="cursive"
            android:text="CATEGORIES"
            android:textColor="#FFFFFF"
            android:textSize="44sp" />
    </RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:id="@+id/GLayout"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        >
        <!-- Row 1 -->
        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardFruits"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/fruits_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:fontFamily="cursive"
                        android:textAlignment="center"
                        android:text="Fruits"
                        android:textColor="#C81010"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"/>
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardVegetables"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
              <FrameLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="146dp"
                      android:layout_gravity="center|bottom"
                      android:src="@drawable/vegetable_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="cursive"
                        android:text="Vegetables"
                        android:textAlignment="center"
                        android:textColor="#C81010"
                        android:textSize="24sp" />
              </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 2 -->
        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardMeat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="144dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/meat_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:fontFamily="cursive"
                        android:textAlignment="center"
                        android:text="Meat"
                        android:textColor="#C81010"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"/>
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardHerbs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/herb_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:fontFamily="cursive"
                        android:textAlignment="center"
                        android:text="Herbs"
                        android:textColor="#C81010"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"/>
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 3 -->
        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardSpices"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/spices_ico"
                        android:layout_gravity="center|bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="cursive"
                        android:text="Spices"
                        android:textAlignment="center"
                        android:textColor="#C81010"
                        android:textSize="24sp" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardSeasoningSauces"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ss_ico"
                        android:layout_gravity="center|bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="cursive"
                        android:text="Seasoning and Sauces"
                        android:textAlignment="center"
                        android:textColor="#C81010"
                        android:textSize="24sp" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 4 -->
        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardDairy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dairy_ico"
                        android:layout_gravity="center|bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="cursive"
                        android:text="Dairy"
                        android:textAlignment="center"
                        android:textColor="#C81010"
                        android:textSize="24sp" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardDryFruits"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dryfruits_ico"
                        android:layout_gravity="center|bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="cursive"
                        android:text="Dry Fruits"
                        android:textAlignment="center"
                        android:textColor="#C81010"
                        android:textSize="24sp" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Row 5 -->
        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardPowderPaste"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pp_ico"
                        android:layout_gravity="center|bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="cursive"
                        android:text="Powder and Paste"
                        android:textAlignment="center"
                        android:textColor="#C81010"
                        android:textSize="24sp" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardOthers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/others_ico"
                        android:layout_gravity="center|bottom"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="cursive"
                        android:text="Others"
                        android:textAlignment="center"
                        android:textColor="#C81010"
                        android:textSize="24sp" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </GridLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/SubmitCard"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/GLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            app:cardBackgroundColor="#C81010"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="cursive"
                    android:text=" Submit "
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"

                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>